    <script>
        /* ========================================= */
        /* JAVASCRIPT: L√≥gica del Pi-Navegator */
        /* ========================================= */
        
        const PI_DECIMALS = "14159265358979323846264338327950288419716939937510"; // Los primeros 50 decimales
        const MAX_PREFIX_LENGTH = 20; 
        const MAX_NICKNAME_LENGTH = 10; 
        const KEYBOARD_LAYOUT = [
            ['1', '2', '3', '4', '5', '6', '7', '8', '9', '0'],
            ['Q', 'W', 'E', 'R', 'T', 'Y', 'U', 'I', 'O', 'P'],
            ['A', 'S', 'D', 'F', 'G', 'H', 'J', 'K', 'L', 'Delete'],
            ['Shift', 'Z', 'X', 'C', 'V', 'B', 'N', 'M', '.', ' '], 
        ];

        // Temas para los niveles (para la narrativa)
        const LEVEL_THEMES = [
            { maxLevel: 10, name: "Sistema Solar" },
            { maxLevel: 20, name: "Galaxia Local" },
            { maxLevel: Infinity, name: "El Borde del Cosmos" }
        ];

        let currentLevel = 1;
        let currentDecimalIndex = 0;
        let currentScore = 0;
        let answerLength = 1; 
        let numOptions = 2; 
        let nickname = ""; // Variable para almacenar el nickname
        let isShifted = true; // Empieza con may√∫sculas

        // Referencias del DOM
        const levelEl = document.getElementById('current-level');
        const themeEl = document.getElementById('level-theme');
        const scoreEl = document.getElementById('current-score');
        const prefixEl = document.getElementById('pi-prefix');
        const optionsEl = document.getElementById('answer-options');
        const feedbackEl = document.getElementById('feedback');
        const nextButton = document.getElementById('next-button');
        const gameOverEl = document.getElementById('game-over');
        const creditsModal = document.getElementById('credits-modal');
        const highscoresModal = document.getElementById('highscores-modal');
        const scoresListEl = document.getElementById('high-scores-list');
        const nicknameFormEl = document.getElementById('nickname-form');
        const nicknameDisplayEl = document.getElementById('nickname-display'); // NUEVA REFERENCIA
        const keyboardEl = document.getElementById('virtual-keyboard'); // NUEVA REFERENCIA
        
        // --- Funciones de Modal ---
        
        function openModal(modalId = 'credits-modal') {
             document.getElementById(modalId).style.display = 'block';
        }
        
        function closeModal(modalId = 'credits-modal') {
             document.getElementById(modalId).style.display = 'none';
        }

        function openScoreModal() {
            loadHighScores(); 
            openModal('highscores-modal');
        }

        // Cierra el modal si el usuario hace clic fuera de √©l
        window.onclick = function(event) {
            if (event.target == creditsModal) {
                closeModal('credits-modal');
            }
            if (event.target == highscoresModal) {
                closeModal('highscores-modal');
            }
        }

        // --- L√≥gica de Teclado Virtual (NUEVO) ---

        function updateNicknameDisplay() {
            nicknameDisplayEl.textContent = nickname || "___";
            // Asegura que el bot√≥n de registro est√© visible si el formulario est√°
            document.getElementById('register-score-button').style.display = 'block';
        }

        function toggleShift() {
            isShifted = !isShifted;
            renderKeyboard();
        }

        function handleKeyPress(key) {
            if (key === 'Shift') {
                toggleShift();
                return;
            }
            
            if (key === 'Delete') {
                nickname = nickname.slice(0, -1);
            } else if (nickname.length < MAX_NICKNAME_LENGTH) {
                if (key === ' ') {
                    nickname += ' ';
                } else if (key === '.') {
                    nickname += '.';
                } else {
                    // Usar may√∫sculas o min√∫sculas seg√∫n el estado de Shift
                    nickname += isShifted ? key : key.toLowerCase();
                    // Desactivar shift despu√©s de un car√°cter si era alfab√©tico
                    if (isShifted && key.match(/[A-Z]/i)) {
                        toggleShift();
                    }
                }
            }
            updateNicknameDisplay();
        }

        function renderKeyboard() {
            keyboardEl.innerHTML = '';
            
            KEYBOARD_LAYOUT.forEach(row => {
                row.forEach(key => {
                    const button = document.createElement('button');
                    button.className = 'key-button';
                    button.onclick = () => handleKeyPress(key);

                    if (key === 'Shift') {
                        button.classList.add('shift-key');
                        if (isShifted) button.classList.add('shift-active');
                        button.textContent = isShifted ? 'ABC' : 'abc';
                    } else if (key === 'Delete') {
                        button.classList.add('delete-key');
                        button.textContent = '‚å´';
                    } else if (key === ' ') {
                        button.classList.add('space-key');
                        button.textContent = 'Espacio';
                    } else if (key.match(/[A-Z]/i)) {
                        // Mostrar la tecla seg√∫n el estado de Shift
                        button.textContent = isShifted ? key : key.toLowerCase();
                    } else {
                         button.textContent = key;
                    }
                    
                    keyboardEl.appendChild(button);
                });
            });
        }


        // --- L√≥gica de Puntuaciones Altas (High Scores) ---
        
        function getHighScores() {
            const scores = localStorage.getItem('piNavigatorHighScores');
            return scores ? JSON.parse(scores) : [];
        }

        function saveHighScores(scores) {
            localStorage.setItem('piNavigatorHighScores', JSON.stringify(scores));
        }

        function loadHighScores() {
            const scores = getHighScores();
            scoresListEl.innerHTML = ''; 

            if (scores.length === 0) {
                scoresListEl.innerHTML = '<li style="justify-content:center; color:#e6e6ff; font-weight:normal;">No hay registros de misi√≥n a√∫n.</li>';
                return;
            }

            scores.slice(0, 5).forEach((entry, index) => {
                const li = document.createElement('li');
                li.innerHTML = `
                    <span>${index + 1}. ${entry.name}</span>
                    <span>${entry.score} pts</span>
                `;
                scoresListEl.appendChild(li);
            });
        }
        
        function isHighScore(newScore) {
            const scores = getHighScores();
            scores.sort((a, b) => b.score - a.score);
            return scores.length < 5 || newScore > scores[4].score;
        }

        function registerScore() {
            let finalNickname = nickname.trim().substring(0, MAX_NICKNAME_LENGTH);
            
            if (finalNickname === "") {
                alert("El Nickname no puede estar vac√≠o. Por favor, ingrese un nombre de piloto.");
                return;
            }
            
            const newEntry = {
                name: finalNickname,
                score: currentScore,
                level: currentLevel
            };
            
            let scores = getHighScores();
            scores.push(newEntry);
            
            scores.sort((a, b) => b.score - a.score);
            scores = scores.slice(0, 5);
            
            saveHighScores(scores);
            
            // Ocultar formulario y teclado, mostrar bot√≥n de reinicio
            nicknameFormEl.style.display = 'none';
            gameOverEl.querySelector('button[onclick="location.reload()"]').style.display = 'block';
            
            // Actualizar el mensaje de Game Over
            gameOverEl.querySelector('p').innerHTML = `
                Registro de misi√≥n completado por <strong>${finalNickname}</strong>. <br>
                Distancia total: ${currentScore} puntos.
            `;
            loadHighScores(); 
        }


        // --- Funciones de Juego (Mantenidas) ---

        function getRandomDigits(length) { 
            let result = '';
            for (let i = 0; i < length; i++) {
                result += Math.floor(Math.random() * 10);
            }
            return result;
        }

        function generateOptions(correctAnswer, totalOptions) {
            let options = new Set();
            options.add(correctAnswer);
            const length = correctAnswer.length;
            
            while (options.size < totalOptions) {
                let randomOption = getRandomDigits(length);
                if (randomOption !== correctAnswer) {
                    options.add(randomOption);
                }
            }
            
            let optionsArray = Array.from(options);
            for (let i = optionsArray.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [optionsArray[i], optionsArray[j]] = [optionsArray[j], optionsArray[i]];
            }
            
            return optionsArray;
        }
        
        function updateGameParameters() {
             if (currentLevel <= 10) { answerLength = 1; } 
             else if (currentLevel <= 20) { answerLength = 2; } 
             else { answerLength = 3; }

             if (currentLevel <= 3) { numOptions = 2; } 
             else if (currentLevel <= 6) { numOptions = 3; } 
             else if (currentLevel <= 9) { numOptions = 4; } 
             else { numOptions = 5; }

            const currentTheme = LEVEL_THEMES.find(t => currentLevel <= t.maxLevel);
            themeEl.textContent = currentTheme ? currentTheme.name : "M√°s All√° de lo Conocido";
        }

        function renderQuestion() {
            gameOverEl.style.display = 'none'; // Asegura que se oculte al iniciar/continuar
            
            updateGameParameters();
            
            const decimalEndIndex = currentDecimalIndex + answerLength;
            
            if (decimalEndIndex > PI_DECIMALS.length) {
                endGame(true); 
                return;
            }

            const correctAnswer = PI_DECIMALS.substring(currentDecimalIndex, decimalEndIndex);
            const options = generateOptions(correctAnswer, numOptions);

            levelEl.textContent = currentLevel;
            scoreEl.textContent = currentScore;
            
            // L√≥gica para el prefijo de Pi
            let prefixText = "3.";
            if (currentDecimalIndex > 0) {
                let fullPrefix = PI_DECIMALS.substring(0, currentDecimalIndex);
                let startIndex = Math.max(0, fullPrefix.length - MAX_PREFIX_LENGTH);
                let visiblePrefix = fullPrefix.substring(startIndex);
                let ellipsis = (startIndex > 0) ? `<span class="past-digits">...</span>` : "";
                
                prefixText += ellipsis + visiblePrefix;
            }
            prefixEl.innerHTML = prefixText; 
            
            optionsEl.innerHTML = '';
            feedbackEl.textContent = '';
            nextButton.style.display = 'none';

            // GENERACI√ìN DE BOTONES DE ALTERNATIVA (JUGABILIDAD PRINCIPAL)
            options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'option-button';
                button.textContent = option.length > 1 ? option.match(/.{1,1}/g).join(' ') : option; 
                button.onclick = () => checkAnswer(button, option, correctAnswer);
                optionsEl.appendChild(button);
            });
            
            prefixEl.scrollLeft = prefixEl.scrollWidth;
        }

        function checkAnswer(button, selectedOption, correctAnswer) {
            Array.from(optionsEl.children).forEach(btn => btn.disabled = true);
            
            if (selectedOption === correctAnswer) {
                button.style.backgroundColor = '#28a745'; 
                feedbackEl.textContent = "¬°C√°lculo de √ìrbita Correcto! üõ∞Ô∏è ¬°Adelante!";
                feedbackEl.className = 'correct';
                currentScore += currentLevel * answerLength * 10; 
                scoreEl.textContent = currentScore;
                nextButton.style.display = 'block';
                
                currentDecimalIndex += answerLength;
                currentLevel++;
            } else {
                button.style.backgroundColor = '#dc3545'; 
                feedbackEl.textContent = `¬°Desviaci√≥n Cr√≠tica! üí• La secuencia correcta era: ${correctAnswer}`;
                feedbackEl.className = 'incorrect';
                
                const correctBtn = Array.from(optionsEl.children).find(btn => btn.textContent.replace(/\s/g, '') === correctAnswer);
                if (correctBtn) {
                    correctBtn.style.backgroundColor = '#ffc107';
                }
                
                endGame(false);
            }
        }

        function endGame(win) {
            optionsEl.innerHTML = '';
            nextButton.style.display = 'none';
            
            document.getElementById('final-level').textContent = currentLevel;
            document.getElementById('final-score').textContent = currentScore;

            if (win) {
                gameOverEl.querySelector('h2').textContent = "¬°Misi√≥n Completa! üèÜ Has mapeado los decimales conocidos.";
                gameOverEl.style.backgroundColor = '#1c491c'; 
                gameOverEl.querySelector('h2').style.color = '#28a745';
            } else {
                gameOverEl.querySelector('h2').textContent = "¬°Colisi√≥n con un C√∫mulo de Error! üíÄ";
                gameOverEl.style.backgroundColor = '#491c1c'; 
                gameOverEl.querySelector('h2').style.color = '#dc3545';
            }

            // L√≥gica de registro de Puntuaci√≥n Alta: Muestra el formulario con el teclado virtual
            if (currentScore > 0 && isHighScore(currentScore)) {
                nicknameFormEl.style.display = 'block';
                gameOverEl.querySelector('button[onclick="location.reload()"]').style.display = 'none'; 
                
                nickname = ""; // Resetear nickname
                updateNicknameDisplay();
                renderKeyboard(); // Renderiza el teclado Sci-Fi
            } else {
                 nicknameFormEl.style.display = 'none';
                 gameOverEl.querySelector('button[onclick="location.reload()"]').style.display = 'block';
            }

            gameOverEl.style.display = 'block';
        }

        // Evento para pasar al siguiente nivel
        nextButton.addEventListener('click', renderQuestion);

        // Iniciar el juego
        renderQuestion();
        loadHighScores(); 
    </script>
</body>
</html>
